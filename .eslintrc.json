{
    "extends": "airbnb",
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType ": "module",
		"ecmaFeatures": {
			"jsx": true,
			"experimentalObjectRestSpread": true
		}
	},
    "rules": {
        "indent": [2, "tab"],
        "react/jsx-indent-props": [2, "tab"],
        "react/jsx-indent": [2, "tab"],
        "linebreak-style": "off",
        "no-tabs": "off",
        "react/prop-types": [2, { "ignore": ["dispatch"] }],
        "max-len": "off",
        "jsx-a11y/no-static-element-interactions": "off"
    },
    "globals": {
        "document": true,
        "navigator": true
    }
}